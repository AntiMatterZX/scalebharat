# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Configuration (if using direct Postgres connection)
DATABASE_URL=postgresql://username:password@host:5432/database

# Authentication Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars
NEXTAUTH_URL=https://your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://startup-connect-redis:6379

# Analytics & Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Security Configuration
ENCRYPTION_KEY=your-32-char-encryption-key
JWT_SECRET=your-jwt-secret-key

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=/tmp/uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Performance & Caching
CACHE_TTL=3600  # 1 hour
ENABLE_PERFORMANCE_MONITORING=true

# External API Keys (if any)
OPENAI_API_KEY=your-openai-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REAL_TIME_FEATURES=true 